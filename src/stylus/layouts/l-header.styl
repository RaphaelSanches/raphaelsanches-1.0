//NAV
//------------------------------------------------------------------

.nav-bar
	width 100%
	background rgba(256,256,256,0.95)
	position fixed
	border-bottom 2px solid R-orange
	padding 1em 0em
	z-index 2
	transition .2s all ease-out
	
	&.scrolled
		top 0
	&.not-scrolled
		top -100px

.nav-bar__logo
	max-height 70px
	float left
	
//------------------------------------------------------------------

.content__section.content__section--banner
	height 100%
	background url(../imgs/capa-2000.jpg) no-repeat center center
	background-size cover
	padding 0
.banner__caption
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	text-align center
	color #fff
	width 100%
	.banner__caption__picture
		display inline-block
		margin 0 auto
		max-width 300px
		+bp(max-tablet)
			width 65%		
	.banner__caption__title
		font-weight normal
		margin-bottom .2em
		margin-top .6em
		font-size 5em
		text-shadow: 0px 1px 6px #000
		+bp(desktop)
			font-size 7.2em
		

	.banner__caption__subtitle
		font-size 3.8em
		font-weight 300
		margin 0
		text-shadow: 0px 1px 5px #000

		+bp(desktop)
			font-size 5.5em

					

.detail-bar__wrap
	width 100%
	height 13px

.detail-bar
	width 33.333%
	height 13px
	float left
	background R-orange
	
	&:first-child
		background R-yellow
		
	&:last-child
		background R-red